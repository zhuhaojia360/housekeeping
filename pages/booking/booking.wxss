/* pages/booking/booking.wxss */

.page{
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background:  #efefef;
}

.nav{
  position: relative;
  z-index: 99;
  display: flex;
  width: 100%;
  box-shadow: 2px 2px 5px #cc4d31;
  background-color: #fe4c40;
  border-radius: 0px 0px 5px 5px;
}

.nav-son{
  color:#fff;
  z-index: 99;
  display: flex;
  flex:1;
  text-align: center;
  height: 45px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.nav-son .active .content{
  color: #fff;
}

.content{
  display: inline-block;
  font-size:35rpx;
}

.icon{
  height: 30rpx;
  width:35rpx;
}

.temp{
  position: absolute;
  z-index: 4;
}

.temp view{
    border-bottom: 1px solid #efefef;
    font-size: 14px;
    color: #666;
}

.temp1{
  display: none;
  width: 100%;
  max-height: 550rpx;
  overflow-y: scroll;
  line-height: 100rpx;
  background: #fff;
}

.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    line-height:100rpx;
    background: #fff;
}

@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}

.slidown{
  display: block;
  animation: slidown .3s ease-in both;
}

@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}

.slidup{
    display: block;
    animation: slidup .3s ease-in both;
}

.disappear{
    display: none;
}

.fullbg{
    display:none;
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
}

.fullopacity{
    display:flex;
    opacity: .5;
}

.firstOpen{
  z-index: 100;
  position: absolute;
  top:20%;
  left:50%;
  margin-left: -260rpx;
  border-radius: 20rpx;
  background-color: #fff;
  text-align: center;
  display: block;
  padding: 120rpx 110rpx 120rpx 110rpx;
}

.firstOpenOpacity{
  display: none;
}

.logo{
  width:168rpx;
  height: 168rpx;
  top:-60rpx;
  position: absolute;
  margin-left: -85rpx;
  z-index: 101;
}

.openTitle{
  font-size:50rpx;
  color:#595858;
  padding-bottom: 20rpx;
}

.openContent{
  margin-top: 50rpx;
  font-size:30rpx;
  color:#737273;
}

.detailText{
  margin-bottom: 20rpx;
}

.openButton{
  border-radius: 10rpx;
  text-align: center;
  margin:auto;
  margin-top:70rpx;
  font-size: 40rpx;
  height: 80rpx;
  width: 300rpx;
  background-color: #fe4c40;
  align-items: center;
  padding-top: 20rpx;
}

.openButton text{
  position: relative;
  color:#fff;
}

.row{
  height: 166rpx;
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #e4e7ec;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
}

.mflex {
  display: flex;
}

.item{
  background-color: #fff;
  display: flex;
  padding:30rpx 0rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.item-left{
  width: 22%;
  float: left;
}

.item-middle{
  width: 32%;
  float: left;
  margin-left: 30rpx;
}

.item-right{
  width: 50%;
  float: right;
}

.technician-photo{
  width: 150rpx;
  height: 150rpx;
}

.name-trait{
  height: 40rpx;
}

.technician-name{
  font-size: 26rpx;
  float: left;
}

.trait{
  margin: 5rpx;
  width: 90rpx;
  height: 30rpx;
  border: 1rpx solid #fe4c40;
  border-radius: 20rpx;
  font-size: 16rpx;
  text-align: center;
  color: #fe4c40;
  float: right;
}

.trait-text{
  margin: auto;
}

.null{
  display: none;
}

.technician-district, .item .technician-note{
  display: flex;
  font-size: 20rpx;
  color: #737373;
  margin-top: 15rpx;
}

.technician-tech{
  color: #fe4c40;
  margin: 55rpx 10rpx;
  font-size: 26rpx;
}

.technician-tech text{
  margin-left: 20rpx;
}

.loading-indicator{
  width: 100%;
  font-size: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: #efefef;
  text-align: center;
  color:#fe4c40;
}