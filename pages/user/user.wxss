 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #efefef;
}

.head{
  height: 300rpx;
  width: 100%;
  background-color: #fe4c40;
  padding-top: 50rpx;
}

.photo {
  display: flex;
  margin: 0 auto;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.name{
  
  text-align: center;
  margin-top: 30rpx;
  color: #fff;
}

.collect,.message,.release,.useHelp,.aboutUs{
  display: flex;
  height: 80rpx;
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  align-items:center;
}

.useHelp{
   margin-top: 50rpx;
}


.icon{
  height: 60rpx;
  width: 60rpx;
  margin-left: 60rpx;
}

.text{

  margin-left: 30rpx;
}


